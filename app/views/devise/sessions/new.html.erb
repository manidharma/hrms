<body style="background-color: #dee9ff">
  <br>
    <div class="registration-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
            </div>
            <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control", style:"border-radius:8px;" %>
            </div>
            <br>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-control", style:"border-radius:8px;" %>
            </div>
            <br>
              <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me, style:"background-color:transparent" %>
              <%= f.label :remember_me %>
            <div class="actions">
              <%= f.submit "Log in" ,class:"create-account", style:"width:150px" %>
            </div>
            </div>
            <br>
            <%= render "devise/shared/links" %>
          <% end %>
        <% end %>
    </div>
</body>